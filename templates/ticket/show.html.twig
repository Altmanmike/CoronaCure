{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ ticket.content }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ ticket.document }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Completé le</th>
                <td>{{ ticket.completedAt ? ticket.completedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">retour à la liste</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">éditer</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
