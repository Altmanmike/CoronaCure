{% extends 'base.html.twig' %}

{% block title %}Intervention{% endblock %}

{% block body %}
    <h1>Intervention</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ intervention.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ intervention.title }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ intervention.kind }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ intervention.content }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ intervention.createdAt ? intervention.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Completé le</th>
                <td>{{ intervention.completedAt ? intervention.completedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cas particulier</th>
                <td>{{ intervention.specialCase }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ intervention.document }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_intervention_index') }}">retour à la liste</a>

    <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}">éditer</a>

    {{ include('intervention/_delete_form.html.twig') }}
{% endblock %}
