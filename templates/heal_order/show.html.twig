{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <h1>Réservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ heal_order.id }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ heal_order.kind }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ heal_order.zipcode }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ heal_order.content }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ heal_order.createdAt ? heal_order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Completé le</th>
                <td>{{ heal_order.completedAt ? heal_order.completedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_heal_order_index') }}">retour à la liste</a>

    <a href="{{ path('app_heal_order_edit', {'id': heal_order.id}) }}">éditer</a>

    {{ include('heal_order/_delete_form.html.twig') }}
{% endblock %}
