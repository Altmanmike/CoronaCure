{% block body %}

<section class="container my-5">
    <div class="row">
        <div class="col">
            <h1 class="h3 my-3 font-weight-normal">S'enregistrer</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {
                    label: 'E-mail'
                }) }}
