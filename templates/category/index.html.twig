{% extends 'base.html.twig' %}

{% block title %}Catégorie index{% endblock %}

{% block body %}
    <h1>Catégorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Miniature</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.thumbnail }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune catégorie trouvée!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Créer une nouvelle catégorie</a>
{% endblock %}
